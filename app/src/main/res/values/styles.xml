<resources>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="Marvel.NormalText" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Marvel.NormalText.CharacterThumb">
        <item name="android:textSize">14sp</item>
        <item name="android:background">@color/black_transparent</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/small_alt_margin</item>
    </style>

</resources>
